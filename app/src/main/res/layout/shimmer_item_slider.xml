<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:background="@color/gray_shimmer"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="5:3"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/slider_item_image"
        android:scaleType="fitCenter" />

    <TextView
        android:id="@+id/slider_item_name"
        android:background="@color/gray_shimmer"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_marginStart="10dp"
        android:lines="1"
        android:marqueeRepeatLimit="marquee_forever"
        app:layout_constraintTop_toBottomOf="@id/slider_item_image" />

    <TextView
        android:id="@+id/slider_item_genre"
        android:layout_width="100dp"
        android:background="@color/gray_shimmer"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/slider_item_name"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:lines="1"
        android:marqueeRepeatLimit="marquee_forever"
        app:layout_constraintTop_toBottomOf="@id/slider_item_name"/>

</androidx.constraintlayout.widget.ConstraintLayout>